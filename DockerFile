# Use the official .NET Core SDK image for building
FROM mcr.microsoft.com/dotnet/core/sdk:3.1 AS build

# Set the working directory in the container
WORKDIR /app

# Copy the .csproj file to the container and restore dependencies
COPY *.csproj ./
RUN dotnet restore

# Copy the remaining application files to the container
COPY . ./

# Build the application with Release configuration
RUN dotnet publish -c Release -o out

# Use the official .NET Core runtime image for running the application
FROM mcr.microsoft.com/dotnet/core/aspnet:3.1 AS runtime

# Set the working directory in the container
WORKDIR /app

# Copy the published application from the build stage to this stage
COPY --from=build /app/out ./

# Expose the port your application listens on (typically 80 for HTTP)
EXPOSE 80

# Define an environment variable for ASP.NET Core
ENV ASPNETCORE_URLS http://*:80

# Start your ASP.NET Core Web API application
ENTRYPOINT ["dotnet", "WebApi.dll"]